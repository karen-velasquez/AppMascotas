<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LogInActivity">


    <!--Button Login-->

    <ImageButton
        android:id="@+id/login_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#FBFBFB"
        android:scaleType="fitCenter"
        android:src="@drawable/accounte" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:text="INGRESAR"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="En caso de que ya tengas una cuenta,esta opción te permite ingresar
para darle seguimiento a tu mascota perdida"
        android:textAlignment="center"
        android:layout_marginTop="300dp"
        android:textColor="#9A9494"
        android:textSize="18sp"
        android:textStyle="italic" />

    <!--Button Register-->
    <ImageButton
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="430dp"
        android:backgroundTint="#FBFBFB"
        android:src="@drawable/registration" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="550dp"
        android:text="REGISTRARSE"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="En caso de que aún no tengas una cuenta, esta opción te permite crear una"
        android:textAlignment="center"
        android:layout_marginTop="600dp"
        android:textColor="#9A9494"
        android:textSize="18sp"
        android:textStyle="italic" />






</RelativeLayout>
